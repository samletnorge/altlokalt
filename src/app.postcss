/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer components {
	.sidebar-icon {
		@apply;
	}

	.sidebar-tooltip {
		@apply absolute w-auto z-10 p-2 m-2 min-w-max left-14 rounded-md shadow-md text-base-content bg-base-200 text-sm font-bold transition-all duration-100 scale-0 origin-left;
	}
}
